@model L4_DAVH_AFPE.Models.TaskModel

@{
    ViewData["Title"] = "Details";
}
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Title:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.title)
        </dd>
        <dt class="col-sm-2">
            Description:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.description)
        </dd>
        <dt class="col-sm-2">
            Priority Level:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.priority)
        </dd>
        <dt class="col-sm-2">
            Project:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.project)
        </dd>
        <dt class="col-sm-2">
            Project Delivery Date:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.date)
        </dd>
    </dl>
    @Html.ActionLink("Done", "Done", new { this.Model }, new { @class = "btn btn-success"})
</div>
<p class="text-muted">*If you mark as done this task, it will be deleted.*</p>
<div>
    <a asp-action="Index">Back to List</a>
</div>

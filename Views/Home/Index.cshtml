@{
    ViewData["Title"] = "Home Page";
}

<div class="row text-left">
    <div class="col-md-12">
        <form asp-action="Index" class="text-left">
            <div class="form-group text-left">
                <p>Please write your username</p>
                <input name="user" class="form-control col-2 text-center" />
                <span required for="user" class="text-danger"></span>
            </div>
            <div class="form-check">
                <input class="form-check-input" checked type="radio" name="admin" value="1">
                <label class="form-check-label" for="admin">
                    Developer
                </label>
            </div>
            <div class="form-check">
                <input class="form-check-input" type="radio" name="admin"  value="0">
                <label class="form-check-label" for="admin">
                    Project Manager
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Start" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>



